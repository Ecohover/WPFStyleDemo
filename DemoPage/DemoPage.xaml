<Window x:Class="WPFDemo.DemoPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFDemo"
        xmlns:control="clr-namespace:WPFDemo.Control" 
        mc:Ignorable="d"
        Title="DemoPage" Height="494.667" Width="532.681"
        x:Name="windows">
    <Grid>
        <Button Content="C001-按鈕" HorizontalAlignment="Left" Margin="26,11,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <CheckBox Content="C002-多选" HorizontalAlignment="Left" Margin="28,85,0,0" VerticalAlignment="Top"/>
        <CheckBox Content="C002-多选" HorizontalAlignment="Left" Margin="28,105,0,0" VerticalAlignment="Top" IsChecked="True"/>
        <RadioButton Content="C003-单选" HorizontalAlignment="Left" Margin="115,87,0,0" VerticalAlignment="Top"/>
        <RadioButton Content="C003-单选" HorizontalAlignment="Left" Margin="115,107,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cbStyleName" HorizontalAlignment="Left" Margin="28,315,0,0" VerticalAlignment="Top" Width="120" ItemsSource="{Binding PageStyleList}" SelectedValuePath="Key" DisplayMemberPath="Value" SelectedIndex="0" />
        <CheckBox Content="C002-多选" HorizontalAlignment="Left" Margin="28,125,0,0" VerticalAlignment="Top" IsEnabled="False"/>
        <RadioButton Content="C003-单选" HorizontalAlignment="Left" Margin="115,126,0,0" VerticalAlignment="Top" IsEnabled="False"/>
        <CheckBox Content="C002-多选" HorizontalAlignment="Left" Margin="28,145,0,0" VerticalAlignment="Top" IsEnabled="False" IsChecked="True"/>
        <RadioButton Content="C003-单选" HorizontalAlignment="Left" Margin="115,145,0,0" VerticalAlignment="Top" IsEnabled="False" IsChecked="True"/>
        <TabControl HorizontalAlignment="Left" Height="258" Margin="206,10,0,0" VerticalAlignment="Top" Width="249">
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
        <Button x:Name="tbSearch" Content="C001-按鈕-1" HorizontalAlignment="Left" Margin="28,36,0,0" VerticalAlignment="Top" Width="92" Click="Button_Click" Height="34"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="28,175,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="111"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="28,203,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" IsEnabled="False"/>
        <control:SearchTextBox x:Name="stb01" Height="23" Margin="28,240,378,0" VerticalAlignment="Top" Width="120" StyleName="{Binding ElementName=windows, Path=StyleName, Mode=OneWay}"/>
        <control:SearchTextBox x:Name="stb02" Height="23" Margin="28,268,378,0" VerticalAlignment="Top" Width="120" IsEnabled="False" StyleName="{Binding ElementName=windows, Path=StyleName, Mode=OneWay}"/>
    </Grid>
</Window>
