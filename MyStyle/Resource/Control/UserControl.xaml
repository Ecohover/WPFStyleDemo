<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:command ="clr-namespace:MyStyle.Command">

    <!-- UserControl 定義 Start-->
    <Style x:Key="UserControl" TargetType="{x:Type UserControl}">
        <Setter Property="Background" Value="{x:Static command:MyStyleManager.BrushWindowBackgrond}"/>
        <Setter Property="Foreground" Value="{x:Static command:MyStyleManager.BrushWindowForeground}"/>
    </Style>
    <!-- UserControl 定義 End-->
</ResourceDictionary>

    