                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="true">
                            <Setter Property="Background" TargetName="border" Value="{x:Static command:MyCurrentStyleManager.BrushScrollBarMouseOver}"/>
                        </Trigger>
                        <Trigger Property="IsDragging" Value="true">
                            <Setter Property="Background" TargetName="border" Value="{x:Static command:MyCurrentStyleManager.BrushScrollBarClick}"/>
                        </Trigger>
